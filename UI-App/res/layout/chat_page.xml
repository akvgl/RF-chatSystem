<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC1E272E"
    tools:context=".ChatActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:overScrollMode="always"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/message_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="334dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#20B2AA"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@android:color/transparent"
                android:hint="Let's chat!"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:textColor="#F2EAEA"
                android:textColorHint="#C7BC98" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="69dp"
        android:layout_height="48dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="#20B2AA"
        android:contentDescription="Send Message"
        android:text=""
        app:icon="@android:drawable/ic_menu_send"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/message_container"
        app:layout_constraintTop_toBottomOf="@+id/listView" />

</androidx.constraintlayout.widget.ConstraintLayout>
